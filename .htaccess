# Защита файлов базы данных
<Files "*.db">
    Order Allow,Deny
    Deny from all
</Files>

# Защита конфиденциальных файлов
<FilesMatch "^(config\.php|credentials\.txt|functions\.php)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Запрет просмотра директорий
Options -Indexes

# Защита от XSS атак
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Принудительное HTTPS (раскомментируйте для продакшена)
